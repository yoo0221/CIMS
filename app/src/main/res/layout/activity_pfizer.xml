<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topbar_pfizer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPfizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="화이자"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonModerna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="모더나"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonJanssen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="얀센"
                android:textSize="15sp" />

            <Button
                android:id="@+id/buttonAstraZeneca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="아스트라제네카"
                android:textSize="13sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="화이자 부작용"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_loadse_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회"
                android:translationX="320sp" />

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/listView_astrazeneca"
        android:layout_width="match_parent"
        android:layout_marginTop="170dp"
        android:layout_height="1000dp"
        android:background="#9DCFFF"
        android:orientation="vertical" />

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main"
        app:layout_anchor="@+id/fab_home_pfizer"
        app:layout_anchorGravity="bottom|center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home_pfizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/main"
        app:srcCompat="@drawable/ic_baseline_home_24"
        tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>